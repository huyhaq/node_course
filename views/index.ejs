
<% if (message) { %>
    <div class="alert alert-primary" role="alert">
        <%= message %>
      </div>
<% } %>

<div>
    <a href="/users/create" class="btn btn-success">Create User</a>
</div>
<div>
    <% if (users.length > 0) { %>
        <table class="table table-hover">
            <tr>
                <td>Name</td>
                <td>Email</td>
                <td>Age</td>
            </tr>
            <% users.forEach(element => { %>
                <tr>
                    <td> <%= element.name %>  </td>
                    <td> <%= element.email %> </td>
                    <td> <%= element.age %> </td>
                </tr>
            <% }) %>
        </table>
    <% } else {  %>
        <p>Khong co du lieu.</p>
     <% }  %>
</div>