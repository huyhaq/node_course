
<% if (message) { %>
    <div class="alert alert-primary" role="alert">
        <%= message %>
      </div>
<% } %>

<div>
    <a href="/users/create" class="btn btn-success">Create User</a>
</div>
<div>
    <% if (users.length > 0) { %>
        <table class="table table-hover">
            <tr>
                <td>Name</td>
                <td>Email</td>
                <td>Age</td>
                <td>Action</td>
            </tr>
            <% users.forEach(element => { %>
                <tr>
                    <td> <%= element.name %>  </td>
                    <td> <%= element.email %> </td>
                    <td> <%= element.age %> </td>
                    <td>
                        <a href="/users/show/<%= element._id %>" class="btn btn-info">Show</a>
                        <a href="/users/edit/<%= element._id %>" class="btn btn-warning">Edit</a>

                        <form action="/users/delete/<%= element._id %>" method="post">
                            <button class="btn btn-danger" type="submit">Delete</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </table>
    <% } else {  %>
        <p>Khong co du lieu.</p>
     <% }  %>
</div>